{
    "compilerOptions": {
        "module": "esnext",
        "target": "ES2020",
        "jsx": "react",
        "experimentalDecorators": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "outDir": "build",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "include": [
        "src"
    ],
}